{
  "manifest_version": 2,
  "name": "Phishing Detector",
  "version": "1.0",
  "description": "Detects phishing emails and alerts the user.",
  "permissions": [
    "messagesRead",
    "messagesModify",
    "storage"
  ],
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "src/popup.html"
  }
}